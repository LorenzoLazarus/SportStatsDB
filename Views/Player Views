create view vw_EPL_PlayerStats
AS
SELECT TOP (100) dbo.League.league_name,dbo.Player.first_name, dbo.Player.last_name, dbo.Player_league_stats.goals, dbo.Player_league_stats.red_cards, dbo.Player_league_stats.yellow_cards, dbo.Player_league_stats.appearances, dbo.Player.photo
                  
FROM     dbo.Player_league_stats INNER JOIN
                  dbo.Player ON dbo.Player_league_stats.player_league_stats_id = dbo.Player.player_league_stats_id INNER JOIN
                  dbo.League ON dbo.Player_league_stats.league_id = dbo.League.league_id

Where dbo.League.league_name ='English Premier League'
--group by sum(dbo.Player_league_stats.goals)
ORDER BY dbo.Player_league_stats.goals
